<apex:page standardController="Account" recordSetVar="accounts">
<header>
    <nav>
        <ul>
            <li><apex:outputLink value="AccountViewPage">View Accounts</apex:outputLink></li>
            <li><apex:outputLink value="AccountCreateEditPage">Create Account</apex:outputLink></li>
        </ul>
    </nav>
</header>
<apex:pageBlock title="Accounts">
    <apex:pageBlockSection>
            <apex:form>
                <apex:selectList value="{!filterId}" size="1">
                    <apex:actionSupport event="onchange" rerender="list-view"/>
                    <apex:selectOptions value="{!listviewoptions}"/>
                </apex:selectList>
                <apex:outputPanel id="list-view">
                    <apex:pageBlockTable value="{! accounts }" var="acc">
                        <apex:column value="{! acc.name }"/>
                        <apex:column value="{! acc.rating }" />
                    </apex:pageBlockTable>
                </apex:outputPanel>
                <apex:commandLink action="{!previous}">Previous</apex:commandLink>
                <apex:commandLink action="{!next}">Next</apex:commandLink>
            </apex:form>
    </apex:pageBlockSection>
</apex:pageBlock>
</apex:page>