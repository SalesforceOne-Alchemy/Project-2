<apex:page standardController="Contact" extensions="ContactControllerExt">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>Contact Page</title>
  </head>  

  <body>
    <apex:image url="{!URLFOR($Resource.FBCBanner, '/FBCbanner.png')}" width="100%"/>

    <apex:sectionHeader title="Contact Page"/>

    <apex:pageMessages/>

    <apex:form>
      <apex:pageBlock title="Create a New Contact">
        <apex:pageBlockSection title="Contact Info">
          <apex:inputField value="{!cont.firstName}"/>
          <apex:inputField value="{!cont.lastName}"/>
          <apex:inputField value="{!cont.AccountId}"/>
          <apex:inputField value="{!cont.Phone}"/>
          <apex:inputField value="{!cont.Email}"/>
          <apex:inputField value="{!cont.RecordTypeId}" rendered="{!IF($Profile.Name =='System Administrator', true , false)}"/>
        </apex:pageBlockSection>

        <apex:pageBlockButtons location="bottom">
          <apex:commandButton action="{!toContactListPage}" value="Cancel" immediate="true"/>
          <apex:commandButton action="{!saveOrEditRecord}" value="Save"/>
        </apex:pageBlockButtons>
      </apex:pageBlock>
    </apex:form>
  </body>
</apex:page>
