<apex:page standardController="WorkOrder" recordSetVar="workList" extensions="WorkOrderPageExtensions" tabStyle="WorkOrder"
    sidebar="false">
    <header>
        <apex:stylesheet value="{!$Resource.visualforceStyle}" />
    </header>
    <apex:image styleClass="bannerImg" url="{!URLFOR($Resource.FBCBanner, '/FBCbanner.png')}" />
    <apex:form >
        <apex:pageMessages id="list"></apex:pageMessages>
        <apex:pageBlock title="Work Order Record">
            <apex:pageBlockSection >
                <apex:inputField value="{!worko.WorkOrderNumber}" />
                <apex:inputField id="statusSelect" value="{!worko.Status}" />
                <apex:inputField value="{!worko.Priority}" />
                <apex:inputField value="{!worko.AccountId}" required="true" />
                <apex:inputField value="{!worko.ContactId}" required="true" />
                <apex:inputField value="{!worko.AssetId}" />
                <apex:inputField value="{!worko.CaseId}" />
                <apex:inputField value="{!worko.EntitlementId}" />
                <apex:inputField value="{!worko.PostalCode}" required="true" />
                <apex:inputField value="{!worko.Subject}" />
                <apex:inputField value="{!worko.Description}" />

            </apex:pageBlockSection>
            <apex:pageBlockButtons location="bottom">
                <apex:commandButton style="" value="Cancel" action="{!cancelRecord}" immediate="true" />
                <apex:commandButton styleClass="centerTable" reRender="list" value="Save" action="{!createSaveRecord}" />
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>

</apex:page>